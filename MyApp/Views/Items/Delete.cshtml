@model MyApp.Models.Item;
@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to Delete this item ?</h3>
<p><strong>Item Name:</strong> @Model.Name</p>
<p><strong>Item Price:</strong> @Model.Price $</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" name="action" class="btn btn-warning" value="Cancel" />
    <input type="submit" name="action" class="btn btn-danger" value="Delete" />
</form>